<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/study_resource_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="自我情绪调节的十种方法自我情绪调节的十种方法"/>

                <TextView
                    android:id="@+id/study_resource_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/study_resource_title"
                    android:layout_marginVertical="5dp"
                    android:textSize="12sp"
                    android:text="心理健康教育网"/>

                <TextView
                    android:id="@+id/study_resource_publishTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/study_resource_title"
                    android:layout_toRightOf="@id/study_resource_author"
                    android:layout_marginVertical="5dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:text="2019-04-10"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/study_resource_image"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/main_background"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
